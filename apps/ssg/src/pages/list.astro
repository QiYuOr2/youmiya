---
import { Events } from '@/components/events';
import Layout from '../layouts/Layout.astro';
import events from '../data/events.json'
import { groupEventsByMonth } from '@/common/events'

const eventsGrouped = groupEventsByMonth(events)
---

<Layout>

  <main class="max-w-[65ch] mx-auto justify-center items-start gap-4 relative z-10 px-4 lg:px-0 pb-10">
    <h1 class="text-2xl pt-8 pb-4 px-1 font-bold">羊宫事件簿</h1>

    {Object.keys(eventsGrouped).map(key => 
      <Events title={key} values={eventsGrouped[key]} className='op-90 mb-4' />
    )}

  </main>

</Layout>
